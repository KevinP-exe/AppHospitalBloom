<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_agregar_paciente">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="40dp"
                android:text="Agregar Paciente"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_nombres"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="1000dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="1dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="155dp"
                android:layout_height="184dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_nombres"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_6" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="131dp"
                android:layout_height="271dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_7" />

            <EditText
                android:id="@+id/txt_nombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="70dp"
                android:background="#288CE866"
                android:ems="10"
                android:hint="Nombres"
                android:inputType="text"
                android:textColorLink="#090909"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_apellidos"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/txt_apellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:background="#288CE866"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="text"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="59dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="132dp"
                android:text="Edad:"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="48dp"
                android:text="Fecha de nacimiento:"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/txt_apellidos" />

            <EditText
                android:id="@+id/txt_fecha_nacimiento"
                android:layout_width="144dp"
                android:layout_height="35dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="49dp"
                android:background="#288CE866"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_edad"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <EditText
                android:id="@+id/txt_edad"
                android:layout_width="113dp"
                android:layout_height="36dp"
                android:layout_marginStart="59dp"
                android:layout_marginTop="16dp"
                android:background="#288CE866"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toStartOf="@+id/txt_fecha_nacimiento"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <EditText
                android:id="@+id/txt_enfermedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="24dp"
                android:background="#288CE866"
                android:ems="10"
                android:hint="Enfermedad"
                android:inputType="text"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_medicamento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_edad" />

            <EditText
                android:id="@+id/txt_medicamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="35dp"
                android:background="#288CE866"
                android:ems="10"
                android:hint="Medicamento"
                android:inputType="text"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_enfermedad" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="59dp"
                android:layout_marginEnd="36dp"
                android:text="Hora de aplicacion:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_habitacion"
                app:layout_constraintEnd_toStartOf="@+id/txt_hora_aplicacion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_medicamento" />

            <EditText
                android:id="@+id/txt_hora_aplicacion"
                android:layout_width="148dp"
                android:layout_height="27dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="28dp"
                android:background="#288CE866"
                android:ems="10"
                android:inputType="time"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_cama"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/txt_medicamento" />

            <EditText
                android:id="@+id/txt_habitacion"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="46dp"
                android:background="#288CE866"
                android:ems="10"
                android:hint="Habitacion"
                android:inputType="text"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_agregar"
                app:layout_constraintEnd_toStartOf="@+id/txt_cama"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <EditText
                android:id="@+id/txt_cama"
                android:layout_width="164dp"
                android:layout_height="48dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="57dp"
                android:background="#288CE866"
                android:ems="10"
                android:hint="Cama"
                android:inputType="text"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_agregar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_habitacion"
                app:layout_constraintTop_toBottomOf="@+id/txt_hora_aplicacion" />

            <Button
                android:id="@+id/btn_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="372dp"
                android:backgroundTint="#288CE8"
                android:text="Agregar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/txt_habitacion" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="140dp"
                android:layout_height="159dp"
                app:srcCompat="@drawable/img_9"
                tools:layout_editor_absoluteX="-7dp"
                tools:layout_editor_absoluteY="599dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="148dp"
                android:layout_height="146dp"
                app:srcCompat="@drawable/img_1"
                tools:layout_editor_absoluteX="-38dp"
                tools:layout_editor_absoluteY="626dp" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="264dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_nombres"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.833"
                app:srcCompat="@drawable/img_13" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>